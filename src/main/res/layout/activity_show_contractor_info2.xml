<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Show_Contractor_Info2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_workers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            android:layout_margin="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cont_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Name"
                        android:textSize="20dp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_margin="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:drawableStart="@drawable/ic_location1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Address  :"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:id="@+id/cont_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Address"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:drawableStart="@drawable/ic_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Contact    :"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:id="@+id/cont_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:drawableStart="@drawable/ic_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Status      :"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:id="@+id/cont_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Status"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:drawableStart="@drawable/ic_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Skill          :"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:id="@+id/cont_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Skill"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:drawableStart="@drawable/ic_charges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Charges    :"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:id="@+id/cont_chagres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Charges"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_bookContractor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Book Contractor"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>

</LinearLayout>